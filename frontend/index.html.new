<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lumind - Aprendizado Personalizado</title>
    
    <!-- Estilos Base -->
    <link rel="stylesheet" href="/css/base.css">
    
    <!-- Componentes -->
    <link rel="stylesheet" href="/css/components/buttons.css">
    <link rel="stylesheet" href="/css/components/forms.css">
    <link rel="stylesheet" href="/css/components/navbar.css">
    
    <!-- Páginas -->
    <link rel="stylesheet" href="/css/pages/progresso.css">
    <link rel="stylesheet" href="/css/pages/acompanhamento.css">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'lumind-purple': '#8B5CF6',
                        'lumind-purple-light': '#A78BFA',
                        'lumind-purple-dark': '#6D28D9',
                        'lumind-blue': '#3B82F6',
                        'lumind-blue-light': '#60A5FA'
                    }
                }
            }
        }
    </script>
</head>
<body>
    <!-- Navbar será injetada aqui -->
    <div id="navbar"></div>

    <!-- Container Principal -->
    <main id="app" class="min-h-screen bg-gray-50 pt-16">
        <!-- O conteúdo será injetado aqui pelo router -->
    </main>

    <!-- Alert Component -->
    <div id="custom-alert-overlay" class="fixed inset-0 bg-gray-900 bg-opacity-50 hidden items-center justify-center z-50">
        <div class="bg-white p-6 rounded-lg shadow-xl max-w-sm w-full mx-4">
            <div class="text-center" id="custom-alert-icon"></div>
            <h3 id="custom-alert-title" class="text-xl font-semibold mt-4 mb-2 text-center"></h3>
            <p id="custom-alert-message" class="text-gray-600 mb-6 text-center"></p>
            <button id="custom-alert-close" class="btn-primary w-full text-sm">Fechar</button>
        </div>
    </div>

    <!-- Loading Indicator -->
    <div id="loading-overlay" class="fixed inset-0 bg-white bg-opacity-90 hidden items-center justify-center z-40">
        <div class="text-center">
            <div class="animate-spin rounded-full h-16 w-16 border-t-4 border-b-4 border-purple-500 mx-auto"></div>
            <p class="mt-4 text-gray-600">Carregando...</p>
        </div>
    </div>

    <!-- Scripts -->
    <script type="module" src="/js/main.js"></script>
</body>
</html>